<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form-signup') do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <h1 class="h3 mb-3 font-weight-normal"><%=t('sign_up') %></h1>

  <%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, autocomplete: "email", id: 'inputEmail', class:'form-control' %>

  <%= f.label :password, value: t('password_min') %>

  <%= f.password_field :password, autocomplete: "new-password", id: 'inputPassword', class: 'form-control' %>

  <%= f.label :password_confirmation, value: t('password_conf') %><br />
  <%= f.password_field :password_confirmation, autocomplete: "new-password", id: 'inputPassword', class: 'form-control'%><br>

  <%= f.submit t('sign_up'), class: 'btn btn-lg btn-primary btn-block' %>
<% end %>

<%= render "users/shared/links" %>