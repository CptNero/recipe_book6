

  <div class="detailBox">
    <div class="titleBox">

      <%= form_with(model: [ @recipe, @recipe.comments.build ],class: 'form-group', local: true) do |form| %>


        <div class="form-group mx-sm-3 mb-2">
          <label><%= t('display_name') %></label> <br>
          <%= form.text_field :commenter, class:'form-control-sm w-25', id:'inputPassword2' %> <br>
          <%= form.text_area :body,  class:'form-control, w-25', id:'exampleFormControlInput1'%>
          <%= form.hidden_field :user_id, value:"#{current_user.id}"%>
          <%= form.submit class: 'btn btn-sm btn-primary btn-block w-25', value: t('send_comment') %>
        </div>



    </div>
  </div>
  <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>

<% end %>