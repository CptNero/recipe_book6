    <%= form.label :description, value: 'Recipe' %><br>
    <%= form.text_area :description, class: 'form-control', id:'exampleFormControlTextarea1' %>
  </p>

  <%= form.label :all_tags, value:'Tags' %> <br>
  <%= form.text_field :all_tags, class:'form-control', id:'exampleFormControlInput1' %>

  <p>
    <%= form.submit class: 'btn btn-lg btn-primary btn-block' %>
  </p>
